{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": true,
    "experimentalDecorators": true,
    "strict": true,
    "baseUrl": "./src",
    "traceResolution": true,
    "typeRoots": [
      "node_modules/@types",
      "./src/@types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "inlineSourceMap": true
  },
  "exclude": [
    ".vscode",
    ".git",
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}